<UserControl x:Class="DataImport.Interactive.BatchInteractive.BetchItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataImport.Interactive.BatchInteractive"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition  Height="150px"/> 
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Name="fileName" HorizontalAlignment="Left" Text="file name" Foreground="#d6d6d6" VerticalAlignment="Center" Margin="20 0"></TextBlock>
            <TextBlock Name="progress" HorizontalAlignment="Right" Text="" Foreground="#d6d6d6" VerticalAlignment="Center" Margin="20 0"></TextBlock>
        </Grid>
        <Grid Background="#272727" x:Name="container" Grid.Row="1" >
            <RichTextBox  VerticalScrollBarVisibility="Auto" Background="Transparent" Name="outLog" BorderThickness="1" Margin="8 8 8 8" ></RichTextBox>
        </Grid>
    </Grid>
</UserControl>
